  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug with mocha",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
      "args": [
        "--exit",
        "--no-timeouts",
        "${workspaceRoot}/dist/test/test.js"
      ],
      "stopOnEntry": true,
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "envFile": "${workspaceRoot}/.vscode/mocha.env",
      "console":"integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
